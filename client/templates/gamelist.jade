table#game-list.table.table-hover.table-condensed
  thead
    tr
      th(data-trans='gamelist.players')
      th(data-trans='gamelist.createdBy')
      th(data-trans='gamelist.createdAt')
      th
  tbody
    {{#games}}
    tr
      td {{playerCount}}/{{maximumPlayers}}
      td {{createdBy}}
      td {{createdAt}}
      td.actions
        {{^joined}}
        a.join-game.btn(href='\#{{uri}}', data-trans='gamelist.join')
        {{/joined}}
        {{#joined}}
        a.open-game.btn(href='\#{{uri}}', data-trans='gamelist.open')
        {{/joined}}
    {{/games}}
   tfoot
    tr
     td(colspan=3)
      ul.pagination
        li(class='{{#prev.disabled}}disabled{{/prev.disabled}}')
          a#pager-prev(href='{{prev.hash}}') &laquo;
        {{#pages}}
        li(class='{{#isCurrentPage}}active{{/isCurrentPage}}')
          a(href='{{hash}}') {{id}}
        {{/pages}}
        li(class='{{#next.disabled}}disabled{{/next.disabled}}')
          a#pager-next(href='{{next.hash}}') &raquo;
      td.actions
        a.btn.btn-primary(href='#create-ludo-modal', data-trans='gamelist.new', data-toggle='modal')

include create-ludo
